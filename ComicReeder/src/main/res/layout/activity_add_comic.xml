<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".AddComicActivity">

  <TextView
      android:id="@+id/comicFloatingLabel"
      style="@style/FloatingLabel"/>
  <EditText
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:id="@+id/comicName"
      android:layout_marginLeft="10dp"
      android:layout_marginTop="5dp"
      android:layout_marginBottom="5dp"
      android:layout_alignParentLeft="true"
      android:inputType="text"
      android:hint="@string/hint_comic_name"/>

  <TextView
    style="@style/FloatingLabel"
    android:text="@string/label_writer"/>
  <EditText
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:id="@+id/writer"
      android:layout_marginLeft="10dp"
      android:layout_marginTop="5dp"
      android:layout_marginBottom="5dp"
      android:layout_alignBottom="@+id/comicName"
      android:layout_below="@+id/comicName"
      android:inputType="text"
      android:hint="@string/hint_writer"/>

  <TextView
      style="@style/FloatingLabel"
      android:text="@string/label_issue_num"/>
  <EditText
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:id="@+id/issueNum"
      android:layout_marginLeft="10dp"
      android:layout_marginTop="5dp"
      android:layout_marginBottom="5dp"
      android:inputType="text"
      android:hint="@string/hint_issue_num"/>

  <TextView
      style="@style/FloatingLabel"
      android:text="@string/label_publisher"/>
  <EditText
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:id="@+id/publisher"
      android:layout_marginLeft="10dp"
      android:layout_marginTop="5dp"
      android:inputType="text"
      android:hint="@string/hint_publisher"/>

  <Button android:id="@+id/add_comic_button"
          android:layout_height="wrap_content"
          android:layout_width="fill_parent"
          android:layout_marginTop="10dp"
          android:text="@string/add_comic"
          android:onClick="addComic"/>
</LinearLayout>
