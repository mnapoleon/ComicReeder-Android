<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mike.comicreeder.activity.ComicVineSearchActivity$PlaceholderFragment"
    android:orientation="vertical">

    <Button
      android:id="@+id/search_comicvine_button"
        android:text="@string/searc_comic_vine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

      <com.loopj.android.image.SmartImageView
        android:id="@+id/cv_smallIcon"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginRight="5dp"
        />

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="vertical">
          <TextView android:id="@+id/cv_comic_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
          <TextView android:id="@+id/cv_issue_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
          <TextView android:id="@+id/cv_publisher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
